<!DOCTYPE html>
<html lang="en">

<head>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-gray-100 text-gray-900">

  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">URL Shortener</h1>

    <% if (locals.id) { %>
      <p>URL Generated: <a href="https://localhost:8001/url/<%= id %>">https://localhost:8001/url/<%= id %></a></p>
      <% } %>

        <!-- URL Shortener Form -->
        <form action="/url" method="POST" class="bg-white p-6 rounded shadow-md space-y-4 my-5">
          <div>
            <label for="originalUrl" class="block text-sm font-medium text-gray-700">Enter URL to Shorten</label>
            <input type="url" name="url" id="originalUrl" required
              class="mt-1 p-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="www.google.com">
          </div>
          <div>
            <button type="submit"
              class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
              Shorten URL
            </button>
          </div>
        </form>

        <div class="container mx-auto p-4">
          <h1 class="text-2xl font-bold mb-4">URL List</h1>
          <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-300">
              <thead>
                <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                  <th class="py-3 px-6 text-left">Short ID</th>
                  <th class="py-3 px-6 text-left">Redirect URL</th>
                  <th class="py-3 px-6 text-left">Visits</th>
                </tr>
              </thead>
              <tbody class="text-gray-600 text-sm font-light">
                <% urls.forEach(url=> { %>
                  <tr class="border-b border-gray-300 hover:bg-gray-100">
                    <td class="py-3 px-6 text-left whitespace-nowrap">
                      <span class="font-semibold">
                        <%= url.shortId %>
                      </span>
                    </td>
                    <td class="py-3 px-6 text-left">
                      <a href="<%= url.redirectURL %>" class="text-blue-500 underline">
                        <%= url.redirectURL %>
                      </a>
                    </td>
                    <td class="py-3 px-6 text-left">
                      <span class="text-white bg-black p-2 rounded">
                        <%= url.visitHistory.length %> visits
                      </span>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
  </div>

  <!-- SweetAlert Trigger -->
  <% if (locals.message) { %>
    <script>
      Swal.fire({
        icon: '<%= message.icon %>',
        title: '<%= message.title %>',
        text: '<%= message.text %>',
      });
    </script>
    <% } %>

</body>

</html>